{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "mocha": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "import/extensions": [
      "off",
      "ignorePackages",
      {
        "js": "never"
      }
    ],
    "import/no-dynamic-require": "off",
    "no-tabs": "off",
    "new-cap": "off",
    "max-len": "off",
    "import/prefer-default-export": "off"
  }
}
